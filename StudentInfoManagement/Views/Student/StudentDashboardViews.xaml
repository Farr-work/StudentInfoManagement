<UserControl x:Class="StudentInfoManagement.Views.Student.StudentDashboardViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <Style x:Key="CardBaseStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextLight" Color="#6B7280"/>
        <SolidColorBrush x:Key="BgLight" Color="#F9FAFB"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BgLight}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBaseStyle}" Margin="0,0,0,20" Padding="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="80" Height="80" CornerRadius="40" Background="#EFF6FF" BorderBrush="#DBEAFE" BorderThickness="2">
                    <TextBlock Text="👨‍🎓" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="25,0,0,0">
                    <TextBlock x:Name="txtStudentName" Text="Đang tải..." FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Border Background="#F3F4F6" CornerRadius="4" Padding="8,2" Margin="0,0,10,0">
                            <TextBlock x:Name="txtStudentID" Text="MSSV: ..." FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextLight}"/>
                        </Border>

                        <Border Background="#F3F4F6" CornerRadius="4" Padding="8,2">
                            <TextBlock x:Name="txtClass" Text="Lớp: ..." FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextLight}"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBaseStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="🔔 Thông báo từ nhà trường" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="icNotifications">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="15" Margin="0,0,0,10"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="NotificationItem_Click">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9FAFB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" TextWrapping="Wrap" FontSize="16"/>
                                        <TextBlock Text="{Binding Content}" FontSize="14" Foreground="{StaticResource TextLight}" Margin="0,5,0,5" 
                                                   TextWrapping="Wrap" MaxHeight="45" TextTrimming="CharacterEllipsis"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📅 " FontSize="12"/>
                                            <TextBlock Text="{Binding DateDisplay}" FontSize="12" Foreground="{StaticResource PrimaryBlue}" FontStyle="Italic"/>
                                            <TextBlock Text=" • Xem chi tiết" FontSize="12" Foreground="{StaticResource PrimaryBlue}" Margin="10,0,0,0" TextDecorations="Underline"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Grid x:Name="OverlayDetail" Visibility="Collapsed" Grid.RowSpan="2" Background="#7F000000" MouseLeftButtonDown="Overlay_Click">
            <Border Background="White" Width="600" MaxHeight="600" CornerRadius="12" Padding="30" 
                    VerticalAlignment="Center" HorizontalAlignment="Center" 
                    MouseLeftButtonDown="Popup_Click">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="lblDetailTitle" Text="Tiêu đề thông báo" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextDark}" TextWrapping="Wrap"/>
                        <TextBlock x:Name="lblDetailDate" Text="dd/MM/yyyy" FontSize="14" Foreground="{StaticResource TextLight}" Margin="0,5,0,0"/>
                        <Separator Background="#E5E7EB" Margin="0,15,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                        <TextBlock x:Name="lblDetailContent" Text="Nội dung chi tiết..." FontSize="16" Foreground="#374151" TextWrapping="Wrap" LineHeight="26"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Đóng" Click="BtnCloseDetail_Click" 
                            HorizontalAlignment="Right" Width="100" Height="36"
                            Background="{StaticResource PrimaryBlue}" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>