<UserControl x:Class="StudentInfoManagement.Views.Student.StudentDashboardViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <Style x:Key="CardBaseStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubjectItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#16A34A"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextLight" Color="#6B7280"/>
        <SolidColorBrush x:Key="BgLight" Color="#F9FAFB"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BgLight}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBaseStyle}" Margin="0,0,10,0" Padding="25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="100" Height="100" CornerRadius="50" Background="#EFF6FF" BorderBrush="#DBEAFE" BorderThickness="2">
                        <TextBlock Text="👨‍🎓" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="25,0,0,0">
                        <TextBlock x:Name="txtStudentName" Text="Nguyễn Văn A" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Mã sinh viên" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                <TextBlock x:Name="txtStudentID" Text="2024001" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                <TextBlock Text="Lớp sinh hoạt" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                <TextBlock x:Name="txtClass" Text="CNTT_K15A" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Chuyên ngành" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                <TextBlock x:Name="txtMajor" Text="Kỹ thuật phần mềm" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,10,0,0">
                                <TextBlock Text="Khoa" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                <TextBlock Text="Công nghệ thông tin" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardBaseStyle}" Margin="10,0,0,0" Padding="25">
                <StackPanel VerticalAlignment="Center">
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Tiến độ học tập" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="txtCreditsEarned" Text="85" FontSize="36" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}"/>
                        <TextBlock Text=" / " FontSize="24" Foreground="{StaticResource TextLight}" VerticalAlignment="Bottom" Margin="5,0,5,5"/>
                        <TextBlock x:Name="txtCreditsTotal" Text="130" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextLight}" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        <TextBlock Text="tín chỉ" FontSize="14" Foreground="{StaticResource TextLight}" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                    </StackPanel>

                    <Grid>
                        <Border Height="12" CornerRadius="6" Background="#F3F4F6"/>
                        <Border x:Name="progressBarCredits" HorizontalAlignment="Left" Width="200" Height="12" CornerRadius="6" Background="{StaticResource SuccessGreen}"/>
                    </Grid>
                    <TextBlock x:Name="txtPercent" Text="Đã hoàn thành 65% chương trình" FontSize="12" Foreground="{StaticResource TextLight}" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBaseStyle}" Margin="0,0,10,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="📚 Môn đang học (Học kỳ 1 - 2024)" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock x:Name="txtSubjectCount" Text="5 Môn" HorizontalAlignment="Right" Foreground="{StaticResource TextLight}" VerticalAlignment="Center"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icCurrentSubjects">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource SubjectItemStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="40" Height="40" CornerRadius="8" Background="#EFF6FF">
                                                <TextBlock Text="📖" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding SubjectName}" FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextDark}"/>
                                                <TextBlock Text="{Binding SubjectCode}" FontSize="12" Foreground="{StaticResource TextLight}" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Lecturer}" FontSize="13" Foreground="{StaticResource TextDark}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📍 " FontSize="10"/>
                                                    <TextBlock Text="{Binding Room}" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                                    <TextBlock Text=" | ⏰ " FontSize="10" Margin="5,0,0,0"/>
                                                    <TextBlock Text="{Binding ScheduleTime}" FontSize="12" Foreground="{StaticResource TextLight}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Border Grid.Column="3" Background="#F3F4F6" CornerRadius="6" Padding="0,4" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Credits}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardBaseStyle}" Margin="10,0,0,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🔔 Thông báo mới" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="panelNotifications">
                            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Thông báo nộp đồ án môn học" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" TextWrapping="Wrap"/>
                                    <TextBlock Text="Hạn chót nộp báo cáo là ngày 15/12." FontSize="12" Foreground="{StaticResource TextLight}" Margin="0,5,0,5" TextWrapping="Wrap"/>
                                    <TextBlock Text="2 giờ trước" FontSize="11" Foreground="{StaticResource PrimaryBlue}"/>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Thay đổi phòng học môn GDQP" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" TextWrapping="Wrap"/>
                                    <TextBlock Text="Lớp GDQP chuyển sang học tại sân B." FontSize="12" Foreground="{StaticResource TextLight}" Margin="0,5,0,5" TextWrapping="Wrap"/>
                                    <TextBlock Text="Hôm qua" FontSize="11" Foreground="{StaticResource TextLight}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>