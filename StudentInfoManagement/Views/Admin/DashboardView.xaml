<UserControl x:Class="StudentInfoManagement.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             FontFamily="Calibri, Segoe UI">

    <UserControl.Resources>
        <Style x:Key="WhiteCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="BlueColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="GreenColor" Color="#22C55E"/>
        <SolidColorBrush x:Key="OrangeColor" Color="#F97316"/>
        <SolidColorBrush x:Key="RedColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
    </UserControl.Resources>

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tổng Quan" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource WhiteCardStyle}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Tổng sinh viên" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Right" Foreground="{StaticResource BlueColor}"/>
                    </Grid>
                    <TextBlock x:Name="txtTotalStudent" Text="0" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource WhiteCardStyle}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Đang học" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="📖" FontSize="20" HorizontalAlignment="Right" Foreground="{StaticResource GreenColor}"/>
                    </Grid>
                    <TextBlock x:Name="txtStudying" Text="0" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource WhiteCardStyle}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Tốt nghiệp" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="🎓" FontSize="20" HorizontalAlignment="Right" Foreground="{StaticResource OrangeColor}"/>
                    </Grid>
                    <TextBlock x:Name="txtGraduated" Text="0" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource WhiteCardStyle}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Thôi học" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Right" Foreground="{StaticResource RedColor}"/>
                    </Grid>
                    <TextBlock x:Name="txtDropout" Text="0" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource WhiteCardStyle}" Margin="5,0,10,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="🕒" FontSize="18" Margin="0,0,10,0" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Hoạt động gần đây" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <StackPanel x:Name="pnlActivities"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource WhiteCardStyle}" Margin="10,0,5,0">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🔔" FontSize="18" Margin="0,0,10,0" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Thông báo" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="BtnAddNoti" Click="BtnAddNoti_Click"
                                Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Thêm thông báo mới">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#EFF6FF" CornerRadius="16" x:Name="border">
                                        <TextBlock Text="+" FontSize="22" FontWeight="Bold" Foreground="{StaticResource BlueColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#DBEAFE"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <StackPanel x:Name="pnlNotifications"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="OverlayInput" Visibility="Collapsed" Background="#AA000000" Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="100">

            <Border Background="White" 
            Width="360" 
            CornerRadius="15" 
            Padding="25" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Tạo thông báo mới" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#333"
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

                    <TextBlock Text="Tiêu đề:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNotiTitle" 
                     Height="35" 
                     Padding="8,0" 
                     Margin="0,0,0,15" 
                     VerticalContentAlignment="Center" 
                     BorderBrush="#DDD" 
                     BorderThickness="1"/>

                    <TextBlock Text="Nội dung:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNotiContent" 
                     Height="100" 
                     Padding="8" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     Margin="0,0,0,25" 
                     VerticalContentAlignment="Top" 
                     BorderBrush="#DDD" 
                     BorderThickness="1"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy bỏ" 
                        Click="BtnCancelNoti_Click" 
                        Width="90" Height="36" 
                        Margin="0,0,10,0" 
                        Background="#F3F4F6" 
                        Foreground="#555"
                        BorderThickness="0" 
                        Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="Đăng tin" 
                        Click="BtnSubmitNoti_Click" 
                        Width="90" Height="36" 
                        Background="{StaticResource BlueColor}" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="OverlayDetail" Visibility="Collapsed" Background="#AA000000" Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="100" MouseLeftButtonDown="OverlayDetail_Click">

            <Border Background="White" 
            Width="450" 
            MaxHeight="500" 
            CornerRadius="15" 
            Padding="25" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="lblDetailTitle" 
                           Text="Tiêu đề thông báo" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           TextWrapping="Wrap" 
                           Margin="0,0,0,5"/>

                        <TextBlock x:Name="lblDetailDate" 
                           Text="01/01/2025 10:00" 
                           FontSize="13" 
                           Foreground="#666" 
                           Margin="0,0,0,15"/>

                        <Separator Margin="0,0,0,15" Background="#EEE"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="lblDetailContent" 
                           Text="Nội dung chi tiết..." 
                           FontSize="15" 
                           Foreground="#333"
                           TextWrapping="Wrap" 
                           LineHeight="24"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" 
                    Content="Đóng" 
                    Click="BtnCloseDetail_Click" 
                    Width="100" Height="36" 
                    Margin="0,20,0,0" 
                    HorizontalAlignment="Right" 
                    Background="#F3F4F6" 
                    Foreground="#555"
                    BorderThickness="0" 
                    Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>